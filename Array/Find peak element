class Solution {
    public int findPeakElement(int[] nums) {
        int low = 0;
        int high = nums.length - 1;

        while (low < high) {
            int mid = low + (high - low) / 2;

            if (nums[mid] > nums[mid + 1]) {
                // peak is on left side or mid itself
                high = mid;
            } else {
                // peak is on right side
                low = mid + 1;
            }
        }

        return low; // peak index
    }
}
